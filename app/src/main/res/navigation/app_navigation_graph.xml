<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.saadahmedev.videoplayer.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.saadahmedev.videoplayer.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
        <action
            android:id="@+id/action_homeFragment_to_downloadListFragment"
            app:destination="@id/downloadListFragment" />
    </fragment>
    <fragment
        android:id="@+id/playerFragment"
        android:name="com.saadahmedev.videoplayer.ui.player.PlayerFragment"
        android:label="fragment_player"
        tools:layout="@layout/fragment_player" />
    <fragment
        android:id="@+id/downloadListFragment"
        android:name="com.saadahmedev.videoplayer.ui.download.DownloadListFragment"
        android:label="fragment_download_list"
        tools:layout="@layout/fragment_download_list" >
        <action
            android:id="@+id/action_downloadListFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>
</navigation>